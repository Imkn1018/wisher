
<div class="card">
  <div class="d-flex flex-column  align-items-center text-align-center pt-2">

      <div class="card_header">
        <h2>登録情報編集</h2>
      </div>
  <div class="pt-2">
<%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
<%= render "devise/shared/error_messages", resource: resource %>

  <div class="field my-2">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, required: true, class:"form-control" %>
  </div>

  <div>
    <td>プロフィール画像</td>
    <td><%= f.attachment_field :user_image %></td>
  </div>

  <div class="field my-2">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", required: true, class:"form-control" %>
  </div>

  <div class="field my-2">
    <%= f.label :current_password %>
    <%= f.password_field :current_password, autocomplete: "current-password",required: true, class:"form-control"  %>
  </div>

  <div class="field my-2">
    <%= f.label :password %><br/>
    <%= f.password_field :password,placeholder:"半角英数字6文字以上", autocomplete: "new-password", required: true, class:"form-control" %>
  </div>

  <div class="field my-2">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, placeholder:"半角英数字6文字以上",autocomplete: "new-password", required: true, class:"form-control" %>
  </div>

  <div class="actions my-4">
    <%= f.submit "登録情報を更新する" ,class: "btn bg-primary btn-block text-white py-2"%>
  </div>
<% end %>
<div class="my-3 py-3">
  <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "btn btn-info nav-link m-2 my-2" %>
</div>
<div class="mt-3 py-4">
<h3>退会処理</h3>
<p><%= button_to "退会する", registration_path(resource_name), data: { confirm: "これまでのデータは全て削除されますがよろしいですか？" }, method: :delete %></p>
<%= link_to "戻る", :back %>
</div>
</div>
</div>
</div>

