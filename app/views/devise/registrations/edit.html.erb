<div class="card">
  <div class="d-flex flex-column  align-items-center text-align-center pt-2">

      <div class="card_header">
        <h2>登録情報編集</h2>
      </div>
  <div class="pt-2">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field pt-2">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field pt-2">
    <%= f.label :パスワード %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em>半角英数字で<%= @minimum_password_length %>文字以上を入力してください</em>
    <% end %>
  </div>

  <div class="field pt-2">
    <%= f.label :確認用パスワード %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :現在のパスワード %> <i></i><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div class="actions pt-2">
    <%= f.submit "登録情報を更新する" %>
  </div>
<% end %>
<div class="mt-3 py-4">
<h3>退会処理</h3>
<p><%= button_to "退会する", registration_path(resource_name), data: { confirm: "これまでのデータは全て削除されますがよろしいですか？" }, method: :delete %></p>
<%= link_to "戻る", :back %>
</div>
</div>
</div>
</div>
<%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "btn btn-info nav-link text-white m-2" %>
