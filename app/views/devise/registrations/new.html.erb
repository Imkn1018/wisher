<%= render "devise/shared/error_messages", resource: resource %>
<div class="card my-auto py-4">
  <div class="mx-auto my-auto ">
    <div class="card_header">
      <h2>新規登録画面</h2>
    </div>

<%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
<%= render "devise/shared/error_messages", resource: resource %>

  <div class="field my-2">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, required: true, class:"form-control" %>
  </div>

  <div class="field my-2">
    <%= f.label :introduction %><br />
    <%= f.text_field :introduction, autofocus: true, class:"form-control" %>
  </div>

  <div class="field my-2">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", required: true, class:"form-control" %>
  </div>

  <div class="field my-2">
    <%= f.label :password %><br/>
    <%= f.password_field :password,placeholder:"半角英数字6文字以上", autocomplete: "new-password", required: true, class:"form-control" %>
  </div>

  <div class="field my-2">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, placeholder:"半角英数字6文字以上",autocomplete: "new-password", required: true, class:"form-control" %>
  </div>

  <div class="actions my-4">
    <%= f.submit "Sign up" ,class: "btn bg-primary btn-block text-white py-2"%>
  </div>
<% end %>
<div class="mt-3 border-top pt-3">
  <%= render "devise/shared/links" %>
</div>


</div>

</div>