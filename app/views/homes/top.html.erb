<div class="mt-3 pt-4 ">
    <% flash.each do |key, value| %>
        <h5 class="alert alert-success"><%= content_tag(:div, value, class: "#{key}") %></h5>
    <% end %>
</div>

<div class="container d-flex flex-column align-items-center ">
   <!--TOP画面-->

   <div class="pb-2 mx-auto top-image d-flex align-items-center">
     <div class="mx-auto my-auto d-flex flex-column align-items-center">
        <h1 class="text-white top-about-text pb-3 border-bottom border-white">Wisher</h1>
        <h4 class="text-white py-2" >叶えたいことを記録する。</h4>
        <h6 class="text-white pt-2 pb-4" >人生を前向きに生きるためのダイアリー</h6>
         <% if user_signed_in? %>
            <div class="d-flex justify-content-around ">
              <div><%= link_to "叶えたいことを追加する" ,new_wish_path,class:"btn btn-info p-3 my-2"  %></div>
            </div>
          <% else %>
            <div class="d-flex justify-content-around ">
              <div><%= link_to "いますぐはじめる" ,new_user_registration_path,class:"btn btn-primary py-2 my-2"  %></div>
              <div><%= link_to "閲覧用の方はこちらから" ,homes_guest_sign_in_path,class:"btn btn-primary my-2 py-2"  %></div>
            </div>
          <% end %>
     </div>
   </div>
   <!--キャッチコピー-->
   <div class="py-4 mt-4 border-top">
      <h2 class="text-center">「叶えたい」を言葉に。</h2>
      <h2 class="text-center">「叶えられた」を言葉に。</h2>
   </div>
  <!--wisher とは-->
   <div class="my-3 py-4 border-top border-bottom">
     <div>about wisher</div>
    <h2 class="text-center mt-3">wisherは、人生で叶えたいことを記録するダイアリーアプリです。</h2>
   </div>

   <!--叶えたいを言葉に-->
   <div class="mt-5">
    <%= render "homes/wish" %>
   </div>
    <!--叶えられたを言葉に-->
   <div class="my-5 pt-5">
    <%= render "homes/dones" %>
   </div>
  <!--いますぐ始める-->
  <% if user_signed_in? %>
      <div class="footer_img my-2">
        <div class="d-flex flex-column align-items-center ">
          <div><%= link_to "叶えたいことを追加する" ,new_wish_path,class:"btn btn-primary py-2 my-2"  %></div>
        </div>
      </div>
  <% else %>
      <div class="footer_img my-2">
        <div class="d-flex flex-column align-items-center ">
          <div><%= link_to "いますぐはじめる" ,new_user_registration_path,class:"btn btn-primary py-2 my-2"  %></div>
          <div><%= link_to "閲覧用の方はこちらから" ,homes_guest_sign_in_path,class:"btn btn-primary my-2 py-2"  %></div>
        </div>
      </div>
  <% end %>


 </div>

