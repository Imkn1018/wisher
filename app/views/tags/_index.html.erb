<%= link_to tags_path do %>
  <h5 class="text-decoration-none">タグ一覧</h5>
<% end %>

<div class="d-flex row mt-2 pt-3">
    <% tag_list.each do |list| %>
    <div class="tag_list ">
        <% if list.wishes.where(isCompleted:false).count != 0  %>
           <%=link_to "#{list.tag_name} #{list.wishes.where(isCompleted:false).count}",wishes_path(tag_id:list.id) ,class:"text-decoration-none rounded-pill bg-white p-3 m-2 text-secondary"%>
        <% end %>
    </div>
    <% end  %>
</div>

