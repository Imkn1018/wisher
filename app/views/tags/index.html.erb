<div class="input-group input-group-md mx-auto mb-4 justify-content-center search-input">
    <%= form_with url: search_path, method: :get, local: true do |f| %>
      <%= f.text_field :keyword, value: @keyword, class:"border-light rounded-pill"%>
      <%= f.submit "検索" , :class =>"btn btn-outline-info my-2 my-sm-0" do%>
        <i class="fa fa-search"></i>
      <% end %>
    <% end %>
 </div>

 <div class="d-flex row ">
  <!--ユーザー情報-->
    <div class="card user-info mx-auto mb-4 p-2 ">
      <div class="d-flex flex-column  align-items-center justify-content-left p-3 ">

          <div >
            <%= attachment_image_tag(@user, :user_image, fallback: "noimage.jpg", size:'200x200', class:"rounded-circle border") %>
          </div>
          <div class="mt-4"><%= current_user.name%></div>
          <div class="d-flex align-items-center">
          <div>
            <%= link_to "登録情報を編集する",edit_users_path,class:"btn btn-success text-center mt-3"%>
          </div>
          </div>
      </div>
    </div>
  <div class="container mx-3 ">
  <h2 class="mt-2 pb-3 border-bottom">タグ一覧</h2>

  <div class="d-flex flex-wrap justify-content-start px-auto">
    <% @tag_list.each do |list| %>
     <div class="tag_card p-4 ">
        <div class="d-flex flex-column  align-items-center">
            <% if list.wishes.count != 0  %>
             <%= link_to wishes_path(tag_id:list.id) do %>
               <div >
                      <%= attachment_image_tag list.wishes[0], :wish_image , fallback: "noimage.jpg", size:'200x200', class:"rounded-circle"%>
               </div>
               <!--タグによる叶えたいことリストの最初の要素の画像を表示-->
               <div>
                 <p><%=link_to list.tag_name %>
               </div>
              <% end  %>
           <% end %>
         </div>
       </div>
     <% end  %>
  </div>
  
  </div>

  </div>

