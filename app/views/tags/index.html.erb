
<div class="d-flex flex-wrap justify-content-around">
  <% @tag_list.each do |list| %>
<div class="tag_card p-4 ">
 <div class="d-flex flex-column  align-items-center">
  <% if list.wishes.where(isCompleted:false).count != 0  %>
  <%= link_to wishes_path(tag_id:list.id) do %>
  <div >
         <%= attachment_image_tag list.wishes.where(isCompleted:false)[0], :wish_image , size:'200x200', class:"rounded-circle"%>
  </div>
     <!--タグによる叶えたいことリストの最初の要素の画像を表示-->
     <div>
       <p><%=link_to list.tag_name %>
     </div>
  <% end  %>
  <% end %>
  </div>
  </div>
<% end  %>
</div>
