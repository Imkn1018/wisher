
<div class="card">
  <div class="d-flex flex-column  align-items-center justify-content-left p-3 ">
      <div class="card_header">
        <h3>マイページ</h3>
      </div>
      <div >
        <%= attachment_image_tag(@user, :user_image, fallback: "noimage.jpg", size:'200x200', class:"rounded-circle border") %>
      </div>
      <div class="mt-4"><%= current_user.name%></div>
      <div class="d-flex align-items-center">
      <div>
        <%= link_to "登録情報を編集する",edit_users_path,class:"btn btn-success text-center mt-3"%>
      </div>

      <div>
      　<%= link_to "叶えたいこと一覧",wishes_path,class:"btn btn-primary text-center mt-3"%>
      </div>
      <div>
      　<%= link_to "叶えられたこと一覧",wishes_dones_path,class:"btn btn-primary text-center mt-3"%>
   　 </div>
      </div>

  </div>

</div>


<div class="container mt-3 pt-5">
  <ul class="nav nav-tabs d-flex row p-3" role="tablist">
    <li class="active pr-3" role="presentation">
      <a aria-controls="tab_a" data-toggle="tab" href="#tab_a" role="tab">全てのリスト</a>
    </li>
    <li class="pr-3" role="presentation">
      <a aria-controls="tab_b" data-toggle="tab" href="#tab_b" role="tab">叶えたいことリスト</a>
    </li>
    <li class="pr-3" role="presentation">
      <a aria-controls="tab_c" data-toggle="tab" href="#tab_c" role="tab">叶えられたことリスト</a>
    </li>
    <li class="nav-item dropdown">
      <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
        Dropdown link
      </a>
      <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
        <li><a class="dropdown-item" href="#">Action</a></li>
        <li><a class="dropdown-item" href="#">Another action</a></li>
        <li><a class="dropdown-item" href="#">Something else here</a></li>
      </ul>
    </li>
  </ul>
  <div class="tab-content">
    <div class="tab-pane active" id="tab_a" role="tabpanel">
      <p>
        <%= render 'tags/index', tag_list: @tag_list %>
        <%= render 'wishes/index', wishes: @wishes, tag: @tag %>
      </p>
    </div>
    <div class="tab-pane" id="tab_b" role="tabpanel">
      <p>
        <%= render 'tags/index', tag_list: @tag_list %>
        <%= render 'wishes/index', wishes: @wishes.where(isCompleted: false), tag: @tag %>
      </p>
    </div>
    <div class="tab-pane" id="tab_c" role="tabpanel">
      <p>
         <%= render 'tags/index', tag_list: @tag_list %>
        <%= render 'wishes/index', wishes: @wishes.where(isCompleted: true), tag: @tag %>
      </p>
    </div>
  </div>
</div>