
<div class="card p-3  ">
  <div>
      <div class="card_header">
         <% if @wish.isCompleted == false %>
            <h4 class="text-secondary">叶えたいこと</h1>
         <% else %>
           <h4 class="text-success">叶えられたこと</h1>
         <% end %>
      </div>
       <div class="row mt-2">
        <div class="col-md-5 mb-5">
              <%= attachment_image_tag @wish, :wish_image, size:'200x200' %>
        </div>
        <div class="col-md-7 mt-2">
          <h4 class="mt-2"><%= @wish.wish_title %></h4>
          <div class="mt-3"><%= @wish.memo %></div>
          <table>
            <tbody>
              <% @wish_tags.each do |wish_tag| %>
              <tr>
                <div class="rounded-pill bg-light p-1 m-2">
                    <%= link_to wish_tag.tag_name, wishes_path(tag_id: wish_tag.id) ,class:"text-secondary text-center"%>
                </div>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
  </div>
  </div>
  <div class="row">
   <% if @wish.isCompleted == false %>
     <div class="d-flex justify-content-around mx-auto">
       <%= link_to "戻る", :back, class:"btn btn-success text-center" %>
       <%= link_to "編集する", edit_wish_path(@wish), class:"btn btn-success" %>
       <%= link_to "叶えられた！", wishes_complete_path(@wish.id),method: :patch ,class:"btn btn-danger"%>
    </div>
    <% end  %>
 </div>
</div>
<!--コンポーネント-->

<% if @wish.isCompleted == true  %>
  <%= link_to "叶えたいことに戻す", wishes_confirm_path(@wish) %>
<% end  %>
<%  if @wish.isCompleted == true  %>
<%= react_component("Organisms/Index/ReviewIndex",{wish:@wish, completeReviews: @reviews} ,class:"px-5") %>
<% end %>
