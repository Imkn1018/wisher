<div class="container pt-3">
  <h4 class="col-md-3 offset-1 bg-light text-center mt-2">商品編集</h4>

  <div class="row pt-4">
    <%= form_with model:@wish, local: true do |f| %>
    <tbody>
        <tr>
          <td>商品画像</td>
          <td><%= f.attachment_field :wish_image %></td>
        </tr>
        <tr>
          <td>商品名</td>
          <td><%= f.text_field :wish_title, placeholder: "商品名" %></td>
        </tr>
        <tr>
          <td>商品説明</td>
          <td><%= f.text_area :memo, placeholder: "ここに説明文を記述" %></td>
        </tr>
        <tr>
          <td>tag</td>
          <td><%= f.text_field :tag_name, placeholder:"スペースを入力することで複数のタグを付けることができます。" %></td>
        </tr>

      </tbody>
      <%= f.submit "変更を保存", class: "btn btn-success my-2" %>
      <% end  %>
      <% if @wish.isCompleted == false  %>
      <%= link_to '削除する', wish_path(@wish.id), method: :delete,data: { confirm: '本当に消去しますか?' } %>
      <% else  %>
      <%= link_to "叶えたいことに戻す", wishes_confirm_path(@wish.id) %>
      <% end  %>
  </div>
</div>